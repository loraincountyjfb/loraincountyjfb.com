---
import MainLayout from '../layouts/main.astro';
import Button from '../components/Button.astro';

const content = {
  title: 'Thank You'
};
---

<MainLayout content={content}>
  <main>
    <div class="min-h-[60vh] flex items-center justify-center">
      <div class="container mx-auto px-4 py-16 text-center">
        <div class="max-w-2xl mx-auto">
          <h1 class="text-6xl font-bold mb-6 font-poppins">Thank you for<br/>your request.</h1>
          <p class="text-xl mb-12 font-poppins">
            We've received your discovery request and will be in touch shortly. Our team is looking forward to helping you navigate your competitive landscape with confidence.
          </p>
          <div class="flex justify-center">
            <Button href="/">
              Return to Homepage
            </Button>
          </div>
        </div>

        {/* Background decorative elements */}
        <div class="absolute left-0 bottom-0 w-[338.916px] h-[338.916px] rounded-full bg-white/20 blur-lg transform rotate-[63.414deg] -translate-x-1/4 translate-y-1/4"></div>
        <div class="absolute right-0 top-0 w-[133.045px] h-[133.045px] rounded-full bg-white/10 blur-lg transform rotate-[63.414deg] translate-x-1/4 -translate-y-1/4"></div>
      </div>
    </div>
  </main>
</MainLayout>

<style>
  main {
    position: relative;
    overflow: hidden;
  }
</style> 