---
import Layout from '../layouts/Layout.astro';
import Form from '../components/Form.astro';
import type { FormContent } from '../lib/types';

// Create form content objects for different animal types
const cowForm: FormContent = {
  _type: 'form',
  title: 'Register Cattle',
  description: 'Register your cattle with detailed information about weight, grade, and breed.',
  submitButtonText: 'Register Cattle',
  backgroundImage: {
    url: 'https://images.unsplash.com/photo-1527153857715-3908f2bae5e8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    alt: 'Cattle in field'
  },
  id: 'cow-form',
  formType: 'cow'
};

const pigForm: FormContent = {
  _type: 'form',
  title: 'Register Pigs',
  description: 'Register your pigs with information about weight, litter size, and breed.',
  submitButtonText: 'Register Pigs',
  backgroundImage: {
    url: 'https://images.unsplash.com/photo-1604848698030-c434ba08ece1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    alt: 'Pigs in farm'
  },
  textPosition: 'right',
  id: 'pig-form',
  formType: 'pig'
};

const sheepForm: FormContent = {
  _type: 'form',
  title: 'Register Sheep',
  description: 'Register your sheep with details about wool quality, weight, and breed.',
  submitButtonText: 'Register Sheep',
  backgroundImage: {
    url: 'https://images.unsplash.com/photo-1484557985045-edf25e08da73?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2073&q=80',
    alt: 'Sheep in pasture'
  },
  id: 'sheep-form',
  formType: 'sheep'
};
---

<Layout title="Livestock Registration Forms">
  <div class="space-y-16 py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-8 text-center">Livestock Registration Forms</h1>
      <p class="text-xl text-center mb-8">Register different types of livestock using our specialized forms.</p>
      
      <!-- Navigation Links -->
      <nav class="flex justify-center gap-6 mb-16">
        <a href="#cow-form" class="px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">Cattle Form</a>
        <a href="#pig-form" class="px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">Pig Form</a>
        <a href="#sheep-form" class="px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">Sheep Form</a>
      </nav>
    </div>

    <Form content={cowForm} />
    <Form content={pigForm} />
    <Form content={sheepForm} />
  </div>
</Layout> 