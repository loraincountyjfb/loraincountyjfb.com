---
import MainLayout from '../layouts/main.astro';

const content = {
  title: '404 - Page Not Found',
};
---

<MainLayout content={content}>
  <div class="container mx-auto py-20 text-center">
    <h1 class="text-6xl font-bold mb-6">404</h1>
    <h2 class="text-3xl mb-8">Page Not Found</h2>
    <p class="text-xl mb-12">The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="px-6 py-4 rounded-lg font-poppins text-[20px] font-semibold leading-6 text-white text-center uppercase bg-primary hover:bg-primary-dark transition-all duration-300 hover:scale-105 inline-block">
      Back to Homepage
    </a>
  </div>
</MainLayout> 