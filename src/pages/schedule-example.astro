---
import '../styles/global.css';
import MainLayout from '../layouts/main.astro';
import Schedule from '../components/Schedule.astro';

// Sample data for demonstration
const scheduleContent = {
  _type: 'schedule',
  title: 'Sale Day Schedule',
  description: [
    {
      _type: 'block',
      children: [
        {
          _type: 'span',
          text: 'Discover our streamlined sale schedule maximizing value for youth exhibitors. Real-time updates, efficient processing, and organized timelines ensure smooth transactions.'
        }
      ],
      style: 'normal'
    }
  ],
  scheduleItems: [
    {
      day: 'Thursday',
      startTime: '1pm',
      items: [
        { category: 'Market Goats', item: 'Grand Champion Non-Dairy Market Goat' },
        { category: 'Market Goats', item: 'Reserve Grand Champion Non-Dairy Market Goat' },
        { category: 'Market Goats', item: 'Grand Champion Dairy Market Goat' },
        { category: 'Market Goats', item: 'Reserve Grand Champion Dairy Market Goat' },
        { category: 'Market Goats', item: 'Remaining Goats' },
        { category: 'Market Turkeys', item: 'Grand Champion Turkey' },
        { category: 'Market Turkeys', item: 'Reserve Grand Champion Turkey' },
        { category: 'Market Turkeys', item: 'Remaining Turkeys' },
        { category: 'Market Lambs', item: 'Grand Champion Market Lamb' },
        { category: 'Market Lambs', item: 'Reserve Grand Champion Market Lamb' },
        { category: 'Market Lambs', item: 'Remaining Lambs by ear tag number' },
        { category: 'Market Ducks', item: 'Grand Champion Duck' },
        { category: 'Market Ducks', item: 'Reserve Grand Champion Duck' },
        { category: 'Market Ducks', item: 'Remaining Ducks' },
        { category: 'Meat Rabbits', item: 'Single Fryer Grand Champion' },
        { category: 'Meat Rabbits', item: 'Single Fryer Reserve Champion' },
        { category: 'Meat Rabbits', item: 'Pen of Three Grand Champion' },
        { category: 'Meat Rabbits', item: 'Pen of Three Reserve Champion' },
        { category: 'Meat Rabbits', item: 'Remaining Meat Rabbits' },
        { category: 'Market Chickens', item: 'Pen of Two Grand Champion' },
        { category: 'Market Chickens', item: 'Pen of Two Reserve Champion' },
        { category: 'Market Chickens', item: 'Remaining Market Chickens' }
      ]
    },
    {
      day: 'Saturday',
      startTime: '8:30am',
      items: [
        { category: 'Market Beef', item: 'Grand Champion Modern Beef Steer' },
        { category: 'Market Beef', item: 'Reserve Grand Champion Modern Beef Steer' },
        { category: 'Market Beef', item: 'Grand Champion Lottery Steer' },
        { category: 'Market Beef', item: 'Reserve Grand Champion Lottery Steer' },
        { category: 'Market Beef', item: 'Grand Champion Dairy Steer' },
        { category: 'Market Beef', item: 'Reserve Grand Champion Dairy Steer' },
        { category: 'Market Beef', item: 'Remaining steers sell in order by number drawn at Weigh-in' },
        { category: 'Market Hogs', item: 'Grand Champion Market Hog' },
        { category: 'Market Hogs', item: 'Reserve Grand Champion Market Hog' },
        { category: 'Market Hogs', item: 'Remaining Market Hogs' }
      ]
    }
  ],
  note: 'Entire order of Thursday sale and Saturday sales will rotate each year so that the animal or division selling last each year will rotate to sell first the following year.'
};
---

<MainLayout content={{ title: 'Sale Day Schedule Example' }}>
  <Schedule content={scheduleContent} />
</MainLayout> 