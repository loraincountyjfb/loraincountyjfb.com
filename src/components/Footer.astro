---
import { loadQuery } from '../../lib/load-query';
import type { SanityDocument } from "@sanity/client";
import imageUrlBuilder from '@sanity/image-url';
import { sanityClient } from "sanity:client";


const builder = imageUrlBuilder(sanityClient);

function urlFor(source: any) {
  if (source) {
    if (builder.image(source)) {
      return builder.image(source);
    } else {
      return source;
    }
  }
  return null;
}

interface FooterType extends SanityDocument {
  logo: any;
  socialLinks: SocialLink[];
  contactInfo: ContactInfo;
  navigationSections: NavigationSection[];
  copyrightText: string;
  affiliationInfo: AffiliationInfo;
}

interface SocialLink {
  platform: string;
  url: string;
  icon?: any;
}

interface ContactInfo {
  phone: string;
  email: string;
}

interface NavigationSection {
  sectionTitle: string;
  links: NavigationLink[];
}

interface NavigationLink {
  label: string;
  url: string;
}

interface AffiliationInfo {
  text: string;
  affiliateName: string;
  affiliateUrl: string;
}

const FOOTER_MENU_QUERY = `*[_type == "footer"][0] {
  logo,
  socialLinks[] {
      platform,
      url,
      icon
    },
    contactInfo {
      phone,
      email
    },
    navigationSections[] {
      sectionTitle,
      links[] {
        label,
        url
      }
    },
    copyrightText,
    affiliationInfo {
      text,
      affiliateName,
      affiliateUrl
    }
  }
`;


// Fetch the header menu data
const { data } = await loadQuery({
  query: FOOTER_MENU_QUERY,
  params: {},
  enabled: true,
});

// Use type assertion to inform TypeScript about the structure
// This ensures type safety when accessing nested properties
const footer = data as FooterType;

// Get the current year
const currentYear = new Date().getFullYear();

// Process the copyright text to include the current year
// Replace any occurrence of a static year with the current year
const copyrightText = footer.copyrightText 
  ? footer.copyrightText.replace(/\d{4}/g, currentYear.toString())
  : `Â© ${currentYear} mosaicemarketing.com. All rights reserved.`;
---

<footer class="footer-gradient text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Logo and Social Section -->
      <div class="lg:col-span-3 lg:pl-0 pl-8">
        {footer.logo && (
          <img 
            src={urlFor(footer.logo).url()} 
            alt="Mosaic eMarketing" 
            class="h-12 mb-6"
          />
        )}
        <div class="flex gap-4 mb-6">
          {footer.socialLinks?.map((social) => (
            <a 
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[#E85C3F] hover:text-white transition-colors"
            >
              {social.platform === 'facebook' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                </svg>
              )}
              {social.platform === 'instagram' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.platform === 'linkedin' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
        {footer.contactInfo && (
          <div class="space-y-2">
            <a href={`tel:${footer.contactInfo.phone}`} class="block text-white hover:text-[#E85C3F] transition-colors">
              {footer.contactInfo.phone}
            </a>
            <a href={`mailto:${footer.contactInfo.email}`} class="block text-white hover:text-[#E85C3F] transition-colors">
              {footer.contactInfo.email}
            </a>
          </div>
        )}
      </div>

      <!-- Navigation Sections -->
      <div class="lg:col-span-9 grid grid-cols-1 md:grid-cols-3 gap-8">
        {footer.navigationSections?.map((section) => (
          <div class="lg:border-l lg:border-white lg:border-opacity-15 pl-8">
            <h3 class="text-2xl font-semibold mb-4">{section.sectionTitle}</h3>
            <ul class="space-y-2">
              {section.links?.map((link) => (
                <li>
                  <a 
                    href={link.url}
                    class="text-white hover:text-[#E85C3F] transition-colors text-lg"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Copyright and Affiliation -->
    <div class="flex flex-col md:flex-row justify-between items-center bg-primary rounded-[50px] mt-12 p-8">
      <p class="text-lg mb-4 md:mb-0 text-white font-semibold">
        {copyrightText}
      </p>
      {footer.affiliationInfo && (
        <p class="text-lg mb-4 md:mb-0 text-white font-semibold">
          {footer.affiliationInfo.text}
          <a 
            href={footer.affiliationInfo.affiliateUrl}
            class="text-white text-underline underline "
          >
            {footer.affiliationInfo.affiliateName}
          </a>
        </p>
      )}
    </div>
  </div>
</footer>

<style>
  footer {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  .footer-gradient {
    border-radius: 100px 100px 0px 0px;
    background: linear-gradient(90deg, #203A4C 0%, #04588A 100%);
  }
</style> 