---
import { PortableText } from "astro-portabletext";
import type { ScheduleContent } from "../lib/types";

interface Props {
  content: ScheduleContent;
}

const { content } = Astro.props;
const { title, description, scheduleItems = [], note } = content;
---

<section class="py-16 bg-[#f8f8f8]">
  <div class="container mx-auto px-4">
    <h1 class="text-5xl sm:text-6xl font-bold text-center mb-4 font-source-serif-4 animate-on-scroll slide-up">{title}</h1>
    <div class="max-w-3xl mx-auto text-center lg:mb-16 mb-10">
      <p class="font-source-serif-4 text-[18px] animate-on-scroll slide-up delay-100">{description}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {scheduleItems.map((schedule) => (
        <div class="bg-white rounded-[30px] overflow-hidden custom-shadow animate-on-scroll slide-up delay-100 self-start">
          <div class="bg-[#565656] p-4 text-white text-center">
            <h2 class="text-xl font-source-serif-4 font-bold">{schedule.day} Starting at {schedule.startTime}</h2>
          </div>
          <div>
            {schedule.items.map((item, index) => (
              <div class={`flex last:border-0 animate-on-scroll slide-up delay-${200 + index * 100}`}>
                <div class="w-1/3 p-4 font-source-serif-4 font-bold border-r bg-[#C8FFC9] text-center">
                  {item.category}
                </div>
                <div class="w-2/3 p-4 pl-10 font-source-serif-4">
                  {item.item}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    {note && (
      <div class="mt-10 max-w-3xl mx-auto bg-white p-6 rounded-[30px] shadow custom-shadow z-10 relative animate-on-scroll slide-up delay-100">
        <h3 class="text-xl font-semibold mb-3">Note:</h3>
        <p>{note}</p>
      </div>
    )}
  </div>
</section>

<style>
  .custom-shadow {
    box-shadow: -478px 478px 189px 0px rgba(0, 0, 0, 0.00), 
                -306px 306px 173px 0px rgba(0, 0, 0, 0.01), 
                -172px 172px 146px 0px rgba(0, 0, 0, 0.03), 
                -76px 77px 108px 0px rgba(0, 0, 0, 0.04), 
                -19px 19px 60px 0px rgba(0, 0, 0, 0.05);
  }
</style> 